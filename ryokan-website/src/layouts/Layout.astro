---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = '伝統と洗練が調和する、老舗旅館の公式ウェブサイト', image = '/images/ogp.jpg' } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang={Astro.locale} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL.toString()} />
    <meta property="og:title" content={`${title} | 老舗旅館`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL.toString()} />
    <meta property="twitter:title" content={`${title} | 老舗旅館`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />
    
    <title>{title} | 老舗旅館</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate icon" href="/favicon.ico" />
    
    <!-- Preload critical fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@300;400;500;700&family=Noto+Serif+JP:wght@300;400;500;700&display=swap">
    
    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Hotel",
        "name": "老舗旅館",
        "description": "伝統と洗練が調和する、老舗旅館の公式ウェブサイト",
        "url": "https://example.com",
        "logo": "https://example.com/images/logo.png",
        "priceRange": "¥¥¥",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "京都市",
          "addressRegion": "京都府",
          "postalCode": "600-0000",
          "streetAddress": "京都市中京区"
        },
        "telephone": "+81-75-000-0000"
      }
    </script>
  </head>
  <style>
    /* Reset main element */
    main {
      border: none !important;
      box-shadow: none !important;
      margin: 0 !important;
      padding: 0 !important;
      position: relative;
    }
    
    /* CTA section styling */
    .cta-section {
      position: relative;
      z-index: 10;
      border: none !important;
      margin: 0 !important;
      padding: 4rem 0;
      background-color: #1a365d; /* primary color */
    }
    
    /* Remove all borders and outlines */
    * {
      border-color: transparent !important;
      outline: none !important;
    }
    
    /* Remove any potential line from the bottom of the main content */
    main > :last-child {
      border-bottom: none !important;
      box-shadow: none !important;
    }
  </style>
  <body class="min-h-screen flex flex-col">
    <Header />
    
    <main class="flex-grow relative">
      <slot />
    </main>  
      <!-- CTA Section - Moved inside main -->
      <div class="bg-primary text-white pt-16 pb-24 relative mt-0">
        <div class="absolute bottom-0 left-0 right-0 h-8 bg-dark"></div>
        <div class="container mx-auto px-4 text-center">
          <h2 class="mb-6 text-3xl font-semibold md:text-4xl">
            特別なひとときを、老舗旅館で
          </h2>
          <p class="max-w-3xl mx-auto mb-10 text-lg opacity-90">
            ご予約は24時間受け付けております。<br>
            特別な記念日やご家族でのご旅行に、心を込めておもてなしいたします。
          </p>
          <div class="flex flex-col sm:flex-row justify-center gap-6 max-w-md mx-auto">
            <a 
              href="/booking/" 
              class="flex-1 sm:flex-none px-8 py-3 text-base font-semibold text-gray-900 bg-white hover:bg-gray-100 rounded-md transition-colors duration-200 text-center"
            >
              今すぐ予約する
            </a>
            <a 
              href="/contact/" 
              class="flex-1 sm:flex-none px-8 py-3 text-base font-semibold text-gray-900 bg-white hover:bg-gray-100 rounded-md transition-colors duration-200 text-center"
            >
              お問い合わせ
            </a>
          </div>
        </div>
      </div>
    </main>
    
    <Footer />
    
    <script>
      // Smooth scroll for anchor links
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      });
    </script>
  </body>
</html>
