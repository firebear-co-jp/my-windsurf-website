---
interface Props {
  id?: string;
  class?: string;
  noPadding?: boolean;
}

const { id, class: className = '', noPadding = false } = Astro.props;
---

<div class:list={[
    'relative w-full',
    !noPadding && 'py-16 md:py-24',
    className
  ]}>
  <div class="container mx-auto px-4">
    <section 
      {id}
      class="w-full"
    >
      <slot />
    </section>
  </div>
</div>
