---
interface Props {
  title: string;
  subtitle: string;
  image: string;
  ctaText: string;
  ctaLink: string;
}

const { title, subtitle, image, ctaText, ctaLink } = Astro.props;
---

<div class="relative h-[70vh] min-h-[500px] flex items-center justify-center bg-gray-900 overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0">
    <img 
      src={image} 
      alt="" 
      class="w-full h-full object-cover"
      width="1920"
      height="1080"
      loading="eager"
    />
    <div class="absolute inset-0 bg-gradient-to-r from-gray-900/70 to-gray-900/40"></div>
  </div>
  
  <!-- Content -->
  <div class="relative z-10 w-full px-4 mx-auto text-center">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl font-bold text-white whitespace-nowrap sm:text-5xl md:text-6xl lg:text-7xl mb-6">
        {title}
      </h1>
      <p class="max-w-3xl mx-auto text-xl text-gray-200 mb-10 md:text-2xl">
        {subtitle}
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mt-8 w-full max-w-md mx-auto">
        <a 
          href={ctaLink}
          class="inline-flex items-center justify-center w-full px-6 py-3 text-base font-medium text-white hover:text-white bg-primary hover:bg-primary/90 transition-all duration-300 rounded-md hover:shadow-lg hover:-translate-y-1"
        >
          {ctaText}
        </a>
        <a 
          href="/rooms/"
          class="inline-flex items-center justify-center w-full px-6 py-3 text-base font-medium text-gray-900 bg-white hover:bg-gray-100 hover:text-gray-900 transition-all duration-300 rounded-md hover:shadow-lg hover:-translate-y-1"
        >
          お部屋を見る
        </a>
      </div>
    </div>
  </div>
</div>
